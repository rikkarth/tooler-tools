{
    "name": "pt.codeforge.tooler-tools",
    "version": "0.0.8",
    "description": "Versatile library for backend and CLI developers, offers a growing collection of",
    "directories": {
        "doc": "docs"
    },
    "scripts": {
        "test": "mvn -B --update-snapshots clean test",
        "prepare": "husky install",
        "release": "standard-version -s -t ''",
        "release:minor": "mvn build-helper:parse-version versions:set@minor && standard-version -s -t '' --release-as minor",
        "release:patch": "mvn build-helper:parse-version versions:set@patch && standard-version -s -t '' --release-as patch",
        "release:major": "mvn build-helper:parse-version versions:set@major && standard-version -s -t '' --release-as major"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/rikkarth/tooler-tools.git"
    },
    "keywords": [
        "tooler-tools",
        "rikkarth",
        "java",
        "backend",
        "library",
        "lib"
    ],
    "author": "Ricardo Mendes",
    "license": "AGPL-3.0",
    "bugs": {
        "url": "https://github.com/rikkarth/tooler-tools/issues"
    },
    "homepage": "https://github.com/rikkarth/tooler-tools#readme",
    "devDependencies": {
        "husky": "^8.0.0",
        "standard-version": "^9.5.0"
    },
    "dependencies": {
        "@commitlint/cli": "^18.4.3",
        "@commitlint/config-conventional": "^18.4.3"
    }
}
